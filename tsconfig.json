{
    "compilerOptions": {
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ESNext",
        "module": "ESNext",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "strict": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}